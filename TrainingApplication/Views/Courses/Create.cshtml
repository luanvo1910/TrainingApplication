@model TrainingApplication.ViewModels.CoursesViewModel
@{
    ViewBag.Title = "Create";
}

<h2>Create a new Course</h2>
@using (Html.BeginForm("Create", "Courses", FormMethod.Post))
{
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <label>Name</label>
        @Html.TextBoxFor(m => m.Course.Name, "", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Course.Name, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <label>Description</label>
        @Html.TextBoxFor(m => m.Course.Description, "", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Course.Description, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <label>Category</label>
        @Html.DropDownListFor(m => m.Course.CategoryId,
       new SelectList(Model.Categories, "Id", "Name"),
       new { @class = "form-control" }
       )
    </div>
    <div class="form-group">
        <label>Trainer</label>
        @Html.DropDownListFor(m => m.Course.TrainerId,
       new SelectList(Model.Trainers, "Id", "Email"),
       new { @class = "form-control" }
       )
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
}

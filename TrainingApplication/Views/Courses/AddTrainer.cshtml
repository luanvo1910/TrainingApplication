@model TrainingApplication.ViewModels.TrainersCourseViewModel
@{
    ViewBag.Title = "AddTrainer";
}

<h2>Add Trainer to Course</h2>

@using (@Html.BeginForm("AddTrainer", "Courses", FormMethod.Post))
{
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        <label>Course</label>
        @Html.DropDownListFor(m => m.CourseId,
        new SelectList(Model.Courses, "Id", "Name"),
        new { @class = "form-control" }
        )
    </div>

    <div class="form-group">
        <label>Trainee</label>
        @Html.DropDownListFor(m => m.TrainerId,
       new SelectList(Model.Trainers, "Id", "Email"),
       new { @class = "form-control" }
       )
    </div>
    <button type="submit" class="btn btn-primary">Add</button>
}
